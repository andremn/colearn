@using FinalProject.LocalResource
@model FinalProject.ViewModels.TagItemViewModel
@{
    ViewBag.Title = Resource.ManageTagsViewTitle;
}

<link href="//netdna.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css" rel="stylesheet">
<link href="~/Content/bootstrap-select.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css"/>

<div class="container">
    <div class="row">
        <section id="controlTagsForm" class="form-center">
            <div class="col-xs-12 col-md-6 col-sm-6">
                <form id="searchForm" class="form-horizontal" role="form">
                    <h4>
                        @Resource.ManageTagsViewHeader
                        <br/>
                        <small>@Resource.ManageTagsViewSubHeader</small>
                    </h4>

                    <hr/>

                    <div class="form-group">
                        <div class="input-group">
                            <input class="form-control" type="search" placeholder="Procure por uma tag" id="tagSearch"/>
                            <span class="input-group-btn">
                                <button id="searchButton" class="btn btn-default" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>

    <div id="statusBoxContainer" class="row text-center" style="display: none">
        <h5>
            <b id="statusBoxContent" style="color: #0c7cd5">

            </b>
        </h5>
    </div>

    <br/>

    <div class="row">
        <div style="float: right;">
            <a id="expandAllBtn" class="btn btn-link" title="@Resource.ExpandAllNodesTreeTitle">
                <i class="fa fa-plus-square-o" style="font-size: 2em"></i>
            </a>
            <a id="collpaseAllBtn" class="btn btn-link" title="@Resource.CollpaseAllNodesTreeTitle">
                <i class="fa fa-minus-square-o" style="font-size: 2em"></i>
            </a>
        </div>

        <div class="tags-tree">

        </div>
    </div>
</div>

<div id="deletionConfirmation" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@Resource.ConfirmTagDeletionModalTitle</h4>
            </div>
            <div class="modal-body">
                <h5>@Resource.ConfirmTagDeletionModalMessage</h5>
            </div>
            <div class="modal-footer">
                <button id="confirmDeletionBtn" type="button" class="btn btn-danger" data-dismiss="modal">
                    @Resource.Yes
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    @Resource.No
                </button>
            </div>
        </div>
    </div>
</div>

<div id="mergeConfirmation" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@Resource.ConfirmTagDeletionModalTitle</h4>
            </div>
            <div class="modal-body">
                <h5 id="mergeConfirmationContent"></h5>
            </div>
            <div class="modal-footer">
                <button id="mergeConfirmationBtn" type="button" class="btn btn-success" data-dismiss="modal">
                    @Resource.Yes</button>
                <button id="mergeCancellationBtn" type="button" class="btn btn-default" data-dismiss="modal">
                    @Resource.No</button>
            </div>
        </div>
    </div>
</div>

<div id="requestQuestionDetailsModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Detalhes da requisição</h4>
            </div>
            <div class="modal-body">
                <h6>Essa requisição foi criada pela pergunta "<b>{0}</b>"</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    Abrir pergunta
                </button>
            </div>
        </div>
    </div>
</div>

<div id="requestStudentDetailsModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Detalhes da requisição</h4>
            </div>
            <div class="modal-body">
                <h6>Essa requisição foi criada pelo estudante "<b>{0}</b>"</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    Abrir perfil do estudante
                </button>
            </div>
        </div>
    </div>
</div>

<div class="popup"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/select")
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/jstree.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Tag/manage.js")"></script>
}